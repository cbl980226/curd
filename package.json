{
  "name": "curd",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down",
    "test:docker:up": "docker-compose -f docker-compose.test.yml --env-file .env.test up -d",
    "test:start": "env-cmd -f .env.test nx serve --configuration=production",
    "e2e": "pnpm test:docker:up && env-cmd -f .env.test pnpm prisma migrate deploy && nx run e2e:e2e"
  },
  "private": true,
  "dependencies": {
    "@prisma/client": "5.2.0",
    "@trpc/server": "^10.38.1",
    "axios": "^1.0.0",
    "bcrypt": "^5.1.1",
    "express": "~4.18.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "3.3.4",
    "swagger-ui-express": "^5.0.0",
    "trpc-openapi": "^1.2.0",
    "trpc-playground": "^1.0.4",
    "tslib": "^2.3.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nx/esbuild": "16.7.3",
    "@nx/eslint-plugin": "16.7.3",
    "@nx/jest": "16.7.3",
    "@nx/js": "16.7.3",
    "@nx/linter": "16.7.3",
    "@nx/node": "16.7.3",
    "@nx/workspace": "16.7.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "~4.17.13",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "~18.7.1",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.17.17",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "nx": "16.7.3",
    "nx-cloud": "latest",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prisma": "^5.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": ".commitlintrc.js"
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "@nx/js@16.7.3": "patches/@nx__js@16.7.3.patch"
    }
  }
}
